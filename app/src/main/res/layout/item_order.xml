<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="7dp"
    android:layout_marginTop="4dp"
    android:backgroundTint="@color/white"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_marginBottom="10dp"
            android:id="@+id/cardimageTravel"
            app:cardElevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginVertical="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="left|center_horizontal"
                    android:text="#IDBS-"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/item_id"
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="left|center_horizontal"
                    android:text="35353535"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tanggalorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:text="Tanggal Order"
                    android:textColor="@color/black"
                    android:textSize="12sp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/lyou2"
            android:layout_below="@+id/cardimageTravel"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_username"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:gravity="left|center_horizontal"
                android:text="username"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </LinearLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_namapemesan"
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="left|center_horizontal"
                    android:text="Nama pemesan"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_hppemesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:text="08788884930"
                    android:textColor="#005555"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/item_emailpemesan"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:id="@+id/dividerdoot"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/layoutpesan"
                android:layout_marginTop="6dp"
                android:layerType="hardware"
                android:src="@drawable/doots" />

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_namapulau"
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="left|center_horizontal"
                    android:text="Tujuan"
                    android:fontFamily="@font/nunito_semibold"
                    android:textAllCaps="true"
                    android:textColor="@color/darkgrey"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_tanggal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="2dp"
                    android:text="13apr - 15apr"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="@color/darkgrey"
                    android:textSize="13sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:text="2022"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="@color/darkgrey"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="3dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="222dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="left|center_horizontal"
                    android:text="20 Orang"
                    android:textAllCaps="true"
                    android:textColor="@color/darkgrey"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_totalhari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:text="35 Hari"
                    android:textColor="@color/darkgrey"
                    android:textSize="13sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:visibility="visible"
                    android:id="@+id/BayarBooking"
                    android:backgroundTint="#2CA301"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearcolor"
                android:background="#410288D1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="55dp">
                <LinearLayout
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="222dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="left|center_horizontal"
                        android:text="Total Harga"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/item_totalharga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:text="35"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@color/black"
                        android:textSize="13sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="222dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunito_semibold"
                        android:gravity="left|center_horizontal"
                        android:text="Status"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/item_status"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp"
                        android:text="35"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="13sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>